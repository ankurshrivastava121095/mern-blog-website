<%- include('../../front/blogHeader.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <%- include('../components/adminSidebar.ejs') %>
              
            <div id="main">
                <button class="openbtn" onclick="openNav()">â˜° </button>  
                <div class="d-flex flex-wrap align-items-center justify-content-between mt-3 mb-3">
                    <h2>Blog List</h2>
                    <a href="/admin/blog" class="btn button-85"><i class="fa-solid fa-plus"></i> Add New Blog</a>
                </div>
                <div style="overflow-x: auto;">
                    <table class="table table-striped" id="myTable">
                        <thead>
                            <th>#</th>
                            <th>TITLE</th>
                            <th>IMAGE</th>
                            <th>DESCRIPTION</th>
                            <th>ACTION</th>
                        </thead>
                        <tbody>
                            <%
                            var i = 1
                            result.forEach((item)=>{
                            %>
                            <tr>
                                <td><%= i++ %>.</td>
                                <td><%= item.title %></td>
                                <td><img src="<%= item.image.url %>" class="rounded shadow-lg" style="width:200px" alt=""></td>
                                <td><%= item.description.slice(0,80) %>...</td>
                                <td class="d-flex flex-nowrap gap10px">
                                    <a href="/admin/viewBlog/<%= item._id %>" class="btn button-85"><i class="fa-solid fa-eye"></i></a>
                                    <a href="/admin/editBlog/<%= item._id %>" class="btn button-85"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a href="/admin/deleteBlog/<%= item._id %>" class="btn button-85"><i class="fa-solid fa-trash-can"></i></a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                        <tfoot>
                            <th>#</th>
                            <th>TITLE</th>
                            <th>IMAGE</th>
                            <th>DESCRIPTION</th>
                            <th>ACTION</th>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../front/blogFooter.ejs') %>